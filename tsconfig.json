{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6",
      "es2017"
    ],
    "target": "es2017",
    "types": ["jest"],
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules"
  ]
}
